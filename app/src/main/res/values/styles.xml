<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.MaterialComponents.Light">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="actionBarStyle">@style/Widget.AppTheme.ActionBar</item>

  </style>

  <style name="AppTheme.NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <style name="AppTheme.Picture" parent="Theme.MaterialComponents.NoActionBar">
    <item name="colorPrimary">@color/colorPicturePrimary</item>
    <item name="colorPrimaryDark">@color/colorPicturePrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="android:windowTranslucentStatus">true</item>
    <item name="android:windowTranslucentNavigation">true</item>
  </style>

  <style name="AppTheme.Splash" parent="AppTheme.NoActionBar">
    <!--<item name="android:windowBackground">@drawable/layer_splash</item>-->
  </style>

  <style name="Widget.AppTheme.Main.CategoryText" parent="">
    <item name="android:textStyle">bold</item>
    <item name="android:gravity">center_vertical</item>
    <item name="android:textAppearance">@style/TextAppearance.AppCompat.Subhead</item>
    <item name="android:textColor">@color/textSubHeader</item>
    <item name="android:paddingBottom">2dp</item>
  </style>

  <style name="Widget.AppTheme.Main.SearchEditText" parent="">
    <item name="android:inputType">text|textNoSuggestions</item>
    <item name="android:windowSoftInputMode">stateAlwaysHidden</item>
    <item name="android:hint">@string/hint_search</item>
    <item name="android:maxLines">1</item>
    <item name="android:imeOptions">actionSearch|flagNoExtractUi</item>
    <item name="android:background">@null</item>
    <item name="android:layout_marginLeft">@dimen/key_line_small</item>
    <item name="android:layout_marginRight">@dimen/key_line_small</item>
  </style>

  <style name="Widget.AppTheme.ActionBar" parent="Widget.AppCompat.Light.ActionBar">
    <item name="android:elevation">0dp</item>
  </style>

</resources>
